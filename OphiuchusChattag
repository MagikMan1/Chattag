local textChatService = game:GetService("TextChatService")

local function CustomizeChatMessage(message)
    local properties = Instance.new("TextChatMessageProperties")
    
    if message.TextSource then
        local player = game:GetService("Players"):GetPlayerByUserId(message.TextSource.UserId)
        
        if player then
            local isAdmin = player.Name == "tHatOnEsKidDA"
            local isMember = player.Name == "dontliketables" -- Add more usernames or roles as needed
            
            if isAdmin then
                properties.PrefixText = "<font color='#181a17'>[Ophiuchus Owner]</font> " .. message.PrefixText
            elseif isMember then
                properties.PrefixText = "<font color='#0c5921'>[Ophiuchus User]</font> " .. message.PrefixText -- Customize member prefix color
            end
        end
    end
    
    return properties
end

textChatService.OnIncomingMessage = CustomizeChatMessage
